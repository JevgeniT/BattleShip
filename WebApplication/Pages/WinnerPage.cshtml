@page
@model WebApplication.Pages.WinnerPage
@{
    ViewData["Title"] = "WinnerPage";
}

<div class="container text-center">
    <div style="margin-top: 3rem">
        <h3 style="color: darkgreen">Player @(Model.Winner) Won </h3>
    </div>
    <div style="margin-top: 6rem">
        <h4 style="margin-bottom: 3rem">
            <a asp-page="./Game">New Game</a>
        </h4>
        <h4>
            <a asp-page="./ResumeGame">Resume Game</a>
        </h4>
    </div>
</div>